<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:weightSum="1">
    
	<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="TITLE:"/>
	
	<EditText android:id="@+id/filenameArea"  
	android:layout_width="fill_parent" 
	android:scrollbars="vertical" android:layout_height="wrap_content"/>
	
	
	<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="TAG:"/>	
	    
	<EditText android:id="@+id/tagArea"  
	android:layout_width="fill_parent" 
	android:scrollbars="vertical" android:layout_height="wrap_content"/>
	
	
  <TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="CONTENT:"/>
	
	<EditText android:id="@+id/contentArea"  
	android:layout_height="wrap_content" 
	android:layout_width="fill_parent" 
	android:layout_weight="1"
	android:scrollbars="vertical" />
	
	    
	
	<LinearLayout android:layout_height="wrap_content" 
	android:id="@+id/linearLayout1" 
	android:orientation="horizontal" 
	android:layout_width="fill_parent">
	
	    <Button 
		android:text="Change Title" 
		android:id="@+id/changeFilename" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:onClick="onClickModifyTitle"></Button>
		
		<Button 
		android:text="Change Tag" 
		android:id="@+id/changeTag" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:onClick="onClickModifyTag"></Button>
		
		<Button 
		android:text="Change Content" 
		android:id="@+id/changeContent" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:onClick="onClickModifyContent"></Button>
	   
	    
	</LinearLayout>   

    <Button 
	    android:text="Quit" 
	    android:id="@+id/button2" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
		android:onClick="onClickQuit"></Button>
		
</LinearLayout>
